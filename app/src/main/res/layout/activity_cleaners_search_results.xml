<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#667788">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:background="#DCDCDC"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logout_BTN_search_results"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight=".1"
                android:scaleType="centerCrop"
                android:src="@drawable/logout"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/back_BTN_search_results"
                android:layout_gravity="center"
                android:src="@drawable/back"
                android:scaleType="centerCrop"
                android:layout_weight=".1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleaners"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:shadowColor="@color/white"

                />
            <Spinner
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/sort_spn_options"
                android:layout_marginStart="10dp"
                />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/manage_my_account_IB_cleaners_list"
                android:src="@drawable/user"
                android:layout_marginStart="0dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:layout_weight=".1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_of_Cleaners"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>




        </LinearLayout>



</RelativeLayout>